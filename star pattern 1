#include <stdio.h>

int main()
{
	int i, j , k;
	for(i=1;i<=4;i++){                                                                                                
                                                                                     
		k=1;
	    for(j=1;j<=7;j++){
	    	if(j>=5-i && j<=3+i)
	    
	    	printf(" ");
	    	
	    	else{
	    	    	j<4?k++:k--;
	    	
	    		printf("%d",k);
	    		
	    }
	    }
	    printf("\n");
	    }
	

}


/*output 

234 321
23   21
2     1
       

             



*/
